<html>
    <head>
        <title>
            To Do List
        </title>

        <script src="https://kit.fontawesome.com/e83eb30c38.js" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/css/home.css">
    </head>

    <body>
        <main id = "container">
            <header id = "header-title">
                TODO App
            </header>

            <form id = 'form-options' action='add-to-list' method='post'>
                <div id = 'description'>
                    <p class = 'color1'>DESCRIPTION</p>
                    <input type="text" name="description" placeholder="What do you need to do?" required id = "description-content">
                </div>
                
                <div id = 'category'>
                    <p class = 'input-label color1'>CATEGORY</p>
                    <select id = 'category-select' name = 'category' class = 'color1'>
                        <option selected="selected" disabled>Choose a category</option>
                        <option value = 'Personal'>Personal</option>
                        <option value = 'Work'>Work</option>
                        <option value = 'School'>School</option>
                        <option value = 'Cleaning'>Cleaning</option>
                        <option value = 'Other'>Other</option>
                    </select>
                </div>

                <div id = "due-date">
                    <p class = 'color1'>DUE DATE</p>
                    <input type = 'date' id = 'due-date-option' name = 'due_date' required class = 'color1'>
                </div>
                
                <button id = 'add-task-button' type = 'submit'>
                    <i class="fas fa-plus"></i>
                    ADD TASK
                </button>
            </form>

            <a href = '/delete-tasks'>
                <button id = 'delete-task-button' type = 'button'>
                    <i class="fas fa-trash-alt"></i>
                    DELETE TASKS
                </button>
            </a>

            <div>
                <ul>
                    <% for(let task of tasks) { %>
                        <li>
                            <div class = 'show-description color1'>
                                <a href = "/select-task/?id=<%= task._id %>">
                                    <!-- <input type = 'checkbox'> -->
                                    Click to Select
                                </a>
                                <span> &nbsp; <%= task.description %></span>
                            </div>
                            <div class = 'show-category'>
                                <%= task.category %>
                            </div>
                            <div class = 'show-date color2'>
                                <i class="fas fa-calendar-day"></i>
                                <span><%= task.due_date %></span>
                            </div>
                        </li>
                    <% } %>
                </ul>    
            </div>
        </main>

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>